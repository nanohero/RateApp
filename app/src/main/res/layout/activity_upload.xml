<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rateapp.corey.rateapp.UploadActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Name"
        android:id="@+id/serLbl"
        android:layout_above="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activty_upload_et_service"
        android:gravity="center_vertical"
        android:background="@android:color/black"
        android:textColor="#37dd7e"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/activity_upload_btn_images"
        android:layout_toEndOf="@+id/activity_upload_btn_images"
        android:layout_marginRight="80dp"
        android:inputType="text"
        android:onClick="openMap" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/activty_upload_et_service"
        android:layout_toRightOf="@+id/serLbl"
        android:layout_toEndOf="@+id/serLbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:id="@+id/rateLbl"
        android:paddingTop="20dp"
        android:layout_below="@+id/serLbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/textView"
        android:layout_below="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_upload_et_title"
        android:gravity="center_vertical"
        android:background="@android:color/black"
        android:textColor="#cecbd9"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="10dp"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Images"
        android:id="@+id/activity_upload_btn_images"
        android:layout_below="@+id/activity_upload_et_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:onClick="openImages" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:id="@+id/activty_upload_btn_video"
        android:layout_alignBottom="@+id/activity_upload_btn_images"
        android:layout_alignRight="@+id/activity_upload_et_title"
        android:layout_alignEnd="@+id/activity_upload_et_title"
        android:onClick="openVideos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/textView2"
        android:layout_below="@+id/activity_upload_btn_images"
        android:layout_toRightOf="@+id/rateLbl"
        android:layout_toEndOf="@+id/rateLbl"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/activity_upload_et_description"
        android:background="@color/abc_input_method_navigation_guard"
        android:textColor="#726f6f"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_above="@+id/activity_upload_btn_upload" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/activity_upload_btn_upload"
        android:onClick="openMap"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/activty_upload_btn_video"
        android:layout_toStartOf="@+id/activty_upload_btn_video" />

</RelativeLayout>
